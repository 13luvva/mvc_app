@model IEnumerable<TrainingApp.Models.StudentResponse>

@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="text-center p-2">
        <h2>Here is the list of people attending the course</h2>
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr><th>FullName</th><th>Email</th><th>University</th><th>Training</th></tr>
            </thead>
            <tbody>
                @foreach (TrainingApp.Models.StudentResponse r in Model)
                {
    <tr>
        <td>@r.FullName</td>
        <td>@r.Email</td>
        <td>@r.University</td>
        <td>@r.Training</td>
    </tr>
}
            </tbody>
        </table>
    </div>
</body>
</html>
