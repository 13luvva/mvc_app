@model TrainingApp.Models.StudentResponse

@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SingUpForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Singing Up</h5>
    <form asp-action="SingUpForm" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FullName">Your fullname:</label>
            <input asp-for="FullName" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Your email:</label>
            <input asp-for="Email" />
        </div>
        <div class="form-group">
            <label>Your university:</label>
            <select asp-for="University">
                <option value="">Choose an option</option>
                <option>BSU</option>
                <option>BSUIR</option>
                <option>BSEU</option>
            </select>
        </div>
        <div class="form-group">
            <label>Choose a training</label>
            <select asp-for="Training">
                <option value="">Choose an option</option>
                <option value="In Progress">Math</option>
                <option value="Recruiting">Python</option>
                <option value="Planned">Asp.net</option>
                <option value="Сompleted">IT</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">SingUp</button>
    </form>
</body>
</html>
